<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".departments.me.ME_L4_T1_Questions">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:background="#EAE5E5"
                    android:padding="5dp"
                    android:weightSum="4.5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/ME4101id"
                        android:gravity="center">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ME 4101 (Internal Combustion Engines)"
                            android:textColor="#000"
                            android:textSize="20sp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/ME4101download"
                        android:layout_weight=".5"
                        android:scaleType="fitXY"
                        android:src="@drawable/download_item" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:background="#EAE5E5"
                    android:padding="5dp"
                    android:weightSum="4.5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/ME4105id"
                        android:gravity="center">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ME 4105 (Fluid Machinery)"
                            android:textColor="#000"
                            android:textSize="20sp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:id="@+id/ME4105download"
                        android:scaleType="fitXY"
                        android:src="@drawable/download_item" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:background="#EAE5E5"
                    android:padding="5dp"
                    android:weightSum="4.5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/ME4117id"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ME 4117 (Refrigeration and Air Conditioning)"
                            android:textColor="#000"
                            android:textSize="20sp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:id="@+id/ME4117download"
                        android:scaleType="fitXY"
                        android:src="@drawable/download_item" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:background="#EAE5E5"
                    android:padding="5dp"
                    android:weightSum="4.5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/IPE4115id"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="IPE 4115 (Industrial Management)"
                            android:textColor="#000"
                            android:textSize="20sp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:id="@+id/IPE4115download"
                        android:scaleType="fitXY"
                        android:src="@drawable/download_item" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="3dp"
                    android:background="#EAE5E5"
                    android:padding="5dp"
                    android:weightSum="4.5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:id="@+id/MEOPTIONALid"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ME **** (Optional- I)"
                            android:textColor="#000"
                            android:textSize="20sp"

                            />

                    </LinearLayout>

                    <ImageView

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:id="@+id/MEOPTIONALdownload"
                        android:scaleType="fitXY"
                        android:src="@drawable/download_item" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>