                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/MATH2101download"
                        android:layout_weight=".5"
                        android:scaleType="fitXY"
                         />


                </LinearLayout>

